<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Mapper.newsViewCounterMapper">

    <select id="newsViewCounter" resultType="POJO.NewsViewCounter">


        update NewsViewCounter
        set count = #{count}

        where newsID=#{newsID};
    </select>

    <select id="newsViewCounter_insert" resultType="POJO.NewsViewCounter">

        insert into NewsViewCounter (newsID, count)
        values (#{newsID}ï¼Œ#{count});
    </select>


</mapper>